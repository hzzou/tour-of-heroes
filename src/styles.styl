/* You can add global styles to this file, and also import other style files */
body, div, span, header, footer, nav, section, aside, article, ul, dl, dt, dd, li, a, p, h1, h2, h3, h4,h5, h6, i, b, textarea, button, input, select, figure, figcaption{
    padding:0;
    margin:0;
}
li{
    list-style:none;
}
button{
    outline:none;
}
a{
    -webkit-tap-highlight-color:rgba(0,0,0,0);
    text-decoration:none;
    color:#000;
}
a:hover{
    color:#000;
    text-decoration:none;
}
input, textarea{
    outline:hidden;
    border:none;
}
img{
    border:none;
    vertical-align:top;
}
.clear{
    content:'';
    display:block;
    clear:both;
}
.clear:after{
    zoom:1;
}
table{
    border-collapse: collapse;
}
html{
    width:100%;
    height:100%;
    overflow:hidden;
}
body{
    width:100%;
    height:100%;
    overflow:auto;
    color:#000;
    background: #f0f0f0;
}
