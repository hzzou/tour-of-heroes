[class*='col-'] //class中包含
    float left
    padding-left 20px
    padding-bottom 20px
[class*='col-']:last-of-type
    padding-right 0
.col-1-4
    width 25%
a
    text-decoration none
*,*:after,*:before
    box-sizing border-box
h3
    text-align center
    margin-bottom 0
h4
    position relative
.grid
    margin 0
.grid-pad
    padding 10px 0
    [class*='col-']:last-of-type
        padding-right 20px
.module
    padding 20px
    text-align center
    max-height 120px
    min-width 120px
    background-color #607d8b
    border-radius 2px
    &:hover
        background-color #eee
        cursor pointer
        color #607d8b
