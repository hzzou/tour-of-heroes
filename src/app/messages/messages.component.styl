h2 
    color red
    font-family Arial, Helvetica, sans-serif
    font-weight lighter
body
    margin 50px
body,inout[text],button
    color crimson 
    font-family Cambria,Georgia
button.clear
    font-family Arial
    background-color #eee
    border none
    padding 5px 10px
    border-radius 4px
    cursor pointer
    color #888
    margin-bottom 12px
    &:hover
        background-color #cfd8dc
    &:disabled
        background-color #eee
        color #aaa
        cursor auto
