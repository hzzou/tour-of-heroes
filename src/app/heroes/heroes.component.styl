.heroes
    margin 0 0 10px 0
    padding 0
    width 200px
    li
        cursor pointer
        position relative
        left 0
        background-color #ddd
        margin 10px
        height 30px
        line-height 30px
        border-radius 8px
        text-align left
        box-sizing border-box
        &:hover
            color #fff
            background-color #607571
    li.selected
        background-color #bbbd8d!important
        color #ffffff
    .text
        position relative
        top -3px
    .badge
        position absolute
        top 0
        left 0
        box-sizing border-box
        display inline-block
        font-size 12px
        color #ffffff
        padding 0 8px 0 8px
        background-color #607d8b
        height 30px
        line-height 30px
        border-radius 8px 0 0 8px
    .badright
        position absolute
        left 40px  
.HeroSelected
    text-align left
    margin-left 20px